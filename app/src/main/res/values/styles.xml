<resources>

    <!-- Base application theme. -->
    <style name="RecipePuppyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RecipePuppyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="RecipePuppyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="RecipePuppyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="title">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="subtitle">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="h1">
        <item name="android:textSize">@dimen/text_30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
